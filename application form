  <script>
    function validateForm(event) {
      const age = document.getElementById("age").value;
      if (age < 18) {
        alert("You must be at least 18 years old to apply.");
        event.preventDefault(); // stop form submission
        return false;
      }
      return true;
    }
  </script>
